{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@cplace-cli/cli",
  "projectType": "application",
  "sourceRoot": "packages/cli/src",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "platform": "node",
        "outputPath": "dist",
        "format": ["esm"],
        "main": "packages/cli/src/cli.ts",
        "outputFileName": "cplace-cli.js",
        "bundle": true,
        "thirdParty": false,
        "skipTypeCheck": false,
        "tsConfig": "packages/cli/tsconfig.json",
        "external": [
          "update-notifier"
        ],
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          },
          "resolveExtensions": [".ts", ".js"],
          "conditions": ["node"]
        }
      }
    }
  }
}