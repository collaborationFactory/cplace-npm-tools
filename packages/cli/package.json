{
  "name": "@cplace-cli/cli",
  "version": "2.0.0-dev",
  "description": "Main CLI entry point for cplace CLI",
  "type": "module",
  "main": "../../dist/packages/cli/index.js",
  "types": "../../dist/packages/cli/index.d.ts",
  "bin": {
    "cplace-cli": "../../dist/packages/cli/src/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && chmod +x ../../dist/packages/cli/src/cli.js",
    "build:bundle": "esbuild src/cli.ts --bundle --platform=node --target=node18 --outfile=../../dist/cplace-cli.js --format=esm --external:fs --external:path --external:os --external:child_process --external:util --external:url --external:stream --external:events --external:buffer --external:crypto --external:assert --external:zlib --external:readline --external:tty --banner:js=\"#!/usr/bin/env node\" && chmod +x ../../dist/cplace-cli.js",
    "clean": "rm -rf ../../dist/packages/cli"
  },
  "dependencies": {
    "@cplace-cli/core": "file:../core",
    "@cplace-cli/command-repos": "file:../command-repos",
    "commander": "^14.0.0",
    "update-notifier": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "~22.0.0",
    "@types/update-notifier": "^4.1.0",
    "typescript": "~5.1.0"
  }
}