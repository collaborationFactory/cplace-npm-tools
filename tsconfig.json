{
  "compilerOptions": {
    "target": "ES2022",
    "declaration": true,
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "rootDirs": ["src", "test", "packages"],
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@cplace-cli/core": ["./packages/core/src/index.ts"],
      "@cplace-cli/git-utils": ["./packages/git-utils/src/index.ts"],
      "@cplace-cli/command-repos": ["./packages/command-repos/src/index.ts"],
      "@cplace-cli/helpers": ["./packages/helpers/src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "packages/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "test/**/*"
  ]
}
