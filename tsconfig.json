{
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "rootDirs": ["src", "test"],
    "lib": ["ES6"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "test/**/*"
  ]
}
